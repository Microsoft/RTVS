<ui:DialogWindow x:Class="Microsoft.VisualStudio.R.Package.DataInspect.DataImport.ImportDataWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
                 xmlns:pkg="clr-namespace:Microsoft.VisualStudio.R.Package"
                 xmlns:wpf="clr-namespace:Microsoft.R.Wpf;assembly=Microsoft.R.Wpf"
                 xmlns:components="clr-namespace:Microsoft.R.Components;assembly=Microsoft.R.Components"
                 mc:Ignorable="d" MinHeight="500" MinWidth="728" x:Name="Self"
                 Style="{DynamicResource DialogStyle}"
                 WindowStartupLocation="CenterOwner"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 Title="{x:Static pkg:Resources.ImportData_Title}">
    <ui:DialogWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Microsoft.VisualStudio.R.Package;component/Wpf/Controls.xaml" />
                <wpf:CommonResources />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="KvpItemTemplate">
                <TextBlock Text="{Binding Path=Key}" />
            </DataTemplate>
        </ResourceDictionary>
    </ui:DialogWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="11,12,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="FilePathBox" MinHeight="20" VerticalContentAlignment="Center" />
            <Button Grid.Column="2" x:Name="FileOpenButton" Padding="0" Content="..." Click="FileOpenButton_Click" VerticalAlignment="Center"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" MinHeight="22" MinWidth="22" 
                    FontSize="{Binding ElementName=_self, Path=FontSize, Converter={x:Static wpf:Converters.FontScale155}}" />
            <RadioButton Grid.Column="4" x:Name="TabFile" GroupName="Tabs" Template="{StaticResource TabHeaderToggleButton}" Content="Input File" />
            <RadioButton Grid.Column="6" x:Name="TabFrame" GroupName="Tabs" Template="{StaticResource TabHeaderToggleButton}" Content="Data Frame" IsChecked="True" />
        </Grid>

        <Border Grid.Row="1" Margin="12,12,12,0" BorderThickness="0,1,1,1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" VerticalAlignment="Stretch">
            <Grid Margin="0,-0.333,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" MinWidth="210" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="70*" MinWidth="490" />
                </Grid.ColumnDefinitions>
                <!-- left side -->
                <Grid Grid.Column="0" Margin="0,12,12,0" Visibility="{Binding Path=HasDetails, Converter={x:Static wpf:Converters.FalseIsCollapsed}}" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Name" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="2" x:Name="VariableNameBox" VerticalContentAlignment="Center" />

                    <!-- Encoding -->
                    <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="Bold" Text="Encoding" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="2" Grid.Column="2" x:Name="EncodingComboBox" SelectionChanged="ComboBox_SelectionChanged" />

                    <!-- Row names -->
                    <TextBlock Grid.Row="4" Grid.Column="0" FontWeight="Bold" Text="Row names" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="4" Grid.Column="2" x:Name="RowNamesComboBox" SelectionChanged="ComboBox_SelectionChanged" 
                              ItemTemplate="{StaticResource KvpItemTemplate}" ItemsSource="{Binding ElementName=Self, Path=RowNames}"
                              SelectedIndex="0"/>

                    <!-- Separator -->
                    <TextBlock Grid.Row="6" Grid.Column="0" FontWeight="Bold" Text="Separator" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="6" Grid.Column="2" x:Name="SeparatorComboBox" SelectionChanged="ComboBox_SelectionChanged" 
                              ItemTemplate="{StaticResource KvpItemTemplate}" ItemsSource="{Binding ElementName=Self, Path=Separators}"
                              SelectedIndex="1" />

                    <!-- Decimal -->
                    <TextBlock Grid.Row="8" Grid.Column="0" FontWeight="Bold" Text="Decimal" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="8" Grid.Column="2" x:Name="DecimalComboBox" SelectionChanged="ComboBox_SelectionChanged" 
                              ItemTemplate="{StaticResource KvpItemTemplate}" ItemsSource="{Binding ElementName=Self, Path=Decimals}"
                              SelectedIndex="0" />

                    <!-- Quote -->
                    <TextBlock Grid.Row="10" Grid.Column="0" FontWeight="Bold" Text="Quote" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="10" Grid.Column="2" x:Name="QuoteComboBox" SelectionChanged="ComboBox_SelectionChanged" 
                              ItemTemplate="{StaticResource KvpItemTemplate}" ItemsSource="{Binding ElementName=Self, Path=Quotes}"
                              SelectedIndex="0" />

                    <!-- Comment -->
                    <TextBlock Grid.Row="12" Grid.Column="0" FontWeight="Bold" Text="Comment" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="12" Grid.Column="2" x:Name="CommentComboBox" SelectionChanged="ComboBox_SelectionChanged" 
                              ItemTemplate="{StaticResource KvpItemTemplate}" ItemsSource="{Binding ElementName=Self, Path=Comments}"
                              SelectedIndex="0" />

                    <!-- Name -->
                    <TextBlock Grid.Row="14" Grid.Column="0" FontWeight="Bold" Text="na.strings" VerticalAlignment="Center" />
                    <TextBox Grid.Row="14" Grid.Column="2" x:Name="NaStringTextBox" VerticalContentAlignment="Center" />

                    <!-- Header -->
                    <TextBlock Grid.Row="16" Grid.Column="0" FontWeight="Bold" Text="Header" VerticalAlignment="Center" />
                    <CheckBox Grid.Row="16" Grid.Column="2" VerticalAlignment="Center" Margin="0,1,0,0" HorizontalAlignment="Left"
                              x:Name="HeaderCheckBox" IsChecked="True" Unchecked="HeaderCheckBox_Changed" Checked="HeaderCheckBox_Changed" />
                </Grid>

                <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" BorderThickness="1,0"
                              Background="{DynamicResource {x:Static wpf:Brushes.SplitterBackgroundKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" />

                <!-- right side -->
                <Grid Grid.Column="2">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{DynamicResource {x:Static wpf:Brushes.ContentBrushKey}}"
                                  Visibility="{Binding ElementName=TabFile, Path=IsChecked, Converter={x:Static wpf:Converters.FalseIsCollapsed}}">
                        <TextBlock x:Name="InputFilePreview" Margin="6" />
                    </ScrollViewer>
                    <Grid Visibility="{Binding ElementName=TabFrame, Path=IsChecked, Converter={x:Static wpf:Converters.FalseIsCollapsed}}">
                        <Border x:Name="ErrorBlock" Visibility="Collapsed" VerticalAlignment="Top"
                                Background="{DynamicResource {x:Static wpf:Brushes.InfoBackgroundKey}}">
                            <TextBlock x:Name="ErrorText" Margin="6" />
                        </Border>
                        <DataGrid x:Name="DataFramePreview" Visibility="Visible" AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="False"
                                   Background="{DynamicResource {x:Static wpf:Brushes.ContentBrushKey}}" BorderThickness="0">
                            <DataGrid.RowHeaderStyle>
                                <Style TargetType="{x:Type DataGridRowHeader}">
                                    <Setter Property="Content" Value="{Binding RowName}" />
                                </Style>
                            </DataGrid.RowHeaderStyle>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" x:Name="OkButton" MinWidth="86" MinHeight="24" Margin="0,12" Content="{x:Static components:Resources.Ok}" Click="OkButton_Click" />
            <Button Grid.Column="2" x:Name="CancelButton" MinWidth="86" MinHeight="24" Margin="6,12,12,12" Content="{x:Static components:Resources.Cancel}" Click="CancelButton_Click" IsCancel="True" />
        </Grid>
    </Grid>
</ui:DialogWindow>
